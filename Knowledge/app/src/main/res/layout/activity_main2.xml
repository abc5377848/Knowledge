<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:id="@+id/timeCount"
        android:textSize = "30sp"
        android:textColor="@android:color/holo_red_dark"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/timeCount"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp"
        android:textSize = "40sp"
        android:textColor="@android:color/black"
        android:id="@+id/questionTitle" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/answerB"
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/answerA"
        android:layout_alignBottom="@+id/answerA"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="43dp"
        android:layout_marginEnd="43dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="156dp"
        android:id="@+id/answerA"
        android:textColor="@android:color/black"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="51dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="46dp"
        android:id="@+id/answerC"
        android:textColor="@android:color/black"
        android:layout_below="@+id/answerB"
        android:layout_alignLeft="@+id/answerA"
        android:layout_alignStart="@+id/answerA" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/answerD"
        android:textColor="@android:color/black"
        android:layout_alignBaseline="@+id/answerC"
        android:layout_alignBottom="@+id/answerC"
        android:layout_alignLeft="@+id/answerB"
        android:layout_alignStart="@+id/answerB" />

    <Button
        android:text="Home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/backHome" />


</RelativeLayout>
